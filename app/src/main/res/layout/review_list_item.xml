<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="314dp"
    android:layout_height="110dp"
    android:background="@drawable/reviews_background"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    >
    <TextView
        android:id="@+id/by_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_marginTop="14dp"
        android:layout_marginStart="13dp"
        android:lineSpacingExtra="3sp"
        android:text="@string/by_user"
        />
    <RatingBar
        android:id="@+id/product_rate"
        android:layout_width="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:progressBackgroundTint="@color/gold"
        android:foregroundTint="@color/gold"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11.6dp"
        />
    <TextView
        android:id="@+id/review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/warm_grey"
        android:lineSpacingExtra="3sp"
        android:text="20 Oct 2018"
        android:layout_below="@+id/by_user"
        android:layout_marginTop="5dp"
        android:layout_marginStart="13dp"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/review_date"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:lineSpacingExtra="2sp"
        android:text="Chambray Carles Terry Gibson balls plaid wolf. Disru
pt fashion axe 90&apos;s quinoa +1 Neutra. Irony ethnic"
        />

</RelativeLayout>