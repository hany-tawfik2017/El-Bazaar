<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="342dp"
        android:layout_height="95dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/brand_img"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/brand_vendor"/>
        <ImageView
            android:id="@+id/divider_img"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/brand_img"
            android:src="@drawable/appbar"
            />
        <TextView
            android:id="@+id/vendor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/divider_img"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="#333333"
            android:text="Vendor Name"
            />
        <TextView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/vendor_name"
            android:layout_marginStart="4dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:text="-"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dash"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="#333333"
            android:text="Brand Name"
            />
        <RatingBar
            android:id="@+id/vendor_rate"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:layout_below="@+id/vendor_name"
            android:layout_alignStart="@id/vendor_name"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:stepSize="1"
            android:backgroundTint="@color/gold"
            android:foregroundTint="@color/gold"
            android:progressTint="@color/gold"
            />
        <ImageView
            android:id="@+id/mark"
            android:layout_width="13dp"
            android:layout_height="20dp"
            android:layout_below="@id/vendor_rate"
            android:layout_alignStart="@id/vendor_rate"
            android:layout_marginTop="10dp"
            android:src="@drawable/map_mark"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mark"
            android:layout_below="@id/vendor_rate"
            android:layout_marginStart="7dp"
            android:layout_marginTop="3dp"
            android:textSize="11.5sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:text="LONGCHAMP"
            />
        <TextView
            android:id="@+id/mall_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignStart="@+id/name"
            android:textSize="11.2sp"
            android:textColor="@color/warm_grey"
            android:text="City Stars Mall"
            />


    </RelativeLayout>
</RelativeLayout>